{
  "openapi": "3.1.0",
  "info": {
    "title": "AI Presentation Generator",
    "description": "Create professional PowerPoint presentations with AI assistance. Complete workflow from outline to final slides with multiple templates and export options.",
    "version": "2.0.0"
  },
  "servers": [
    {
      "url": "https://ppt.samsoncj.xyz"
    }
  ],
  "paths": {
    "/api/v1/ppt/gpts/generate": {
      "post": {
        "operationId": "generatePresentation",
        "summary": "Generate PowerPoint presentation with streaming",
        "description": "Create a complete presentation from topic description with real-time generation. This endpoint will generate an outline, prepare layouts, and stream the complete presentation creation process. Returns immediate access link for viewing progress and final results.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "Detailed description of the presentation topic. The AI will automatically generate an outline and structure. Be specific about the topic and any key points to cover."
                  },
                  "n_slides": {
                    "type": "integer",
                    "default": 8,
                    "minimum": 3,
                    "maximum": 20,
                    "description": "Number of slides to generate"
                  },
                  "language": {
                    "type": "string",
                    "default": "Chinese",
                    "enum": ["English", "Chinese"],
                    "description": "Presentation language"
                  },
                  "template": {
                    "type": "string",
                    "default": "classic",
                    "enum": ["general", "classic", "classic-dark", "modern", "professional"],
                    "description": "Presentation template style - classic (recommended default, traditional layouts), general (general purpose layouts), classic-dark (dark theme), modern (business pitch style), professional (corporate presentations)"
                  },
                  "export_as": {
                    "type": "string",
                    "default": "pptx",
                    "enum": ["pptx", "pdf"],
                    "description": "Export format"
                  },
                  "tone": {
                    "type": "string",
                    "description": "Presentation tone (professional, casual, academic, etc.)"
                  },
                  "instructions": {
                    "type": "string",
                    "description": "Additional instructions for content generation"
                  }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Presentation generation started successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "presentation_id": {
                      "type": "string",
                      "description": "Unique presentation identifier"
                    },
                    "title": {
                      "type": "string", 
                      "description": "Generated presentation title"
                    },
                    "outline": {
                      "type": "string",
                      "description": "Brief outline or status of the presentation"
                    },
                    "edit_url": {
                      "type": "string",
                      "description": "Complete URL for online presentation editing and viewing"
                    },
                    "path": {
                      "type": "string",
                      "description": "Direct access URL to the presentation"
                    },
                    "message": {
                      "type": "string",
                      "description": "Detailed status message with instructions for the user"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}