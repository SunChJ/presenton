{
  "openapi": "3.1.0",
  "info": {
    "title": "AI Presentation Generator",
    "description": "Create professional PowerPoint presentations with AI assistance. Complete workflow from outline to final slides with multiple templates and export options.",
    "version": "2.0.0"
  },
  "servers": [
    {
      "url": "https://ppt.samsoncj.xyz"
    }
  ],
  "paths": {
    "/api/v1/ppt/gpts/generate": {
      "post": {
        "operationId": "generatePresentation",
        "summary": "Generate PowerPoint presentation",
        "description": "IMPORTANT: Always ask users to confirm presentation details before calling this API. Ask for: 1) Topic/content details, 2) Number of slides (default: 8), 3) Language (default: Chinese), 4) Template style (default: classic). Only call this API after getting user confirmation.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "Detailed description of the presentation topic and content requirements"
                  },
                  "n_slides": {
                    "type": "integer",
                    "default": 8,
                    "minimum": 3,
                    "maximum": 20,
                    "description": "Number of slides to generate (default: 8)"
                  },
                  "language": {
                    "type": "string",
                    "default": "Chinese",
                    "enum": ["English", "Chinese"],
                    "description": "Presentation language (default: Chinese)"
                  },
                  "template": {
                    "type": "string",
                    "default": "classic",
                    "enum": ["general", "classic", "classic-dark", "modern", "professional"],
                    "description": "Template options: classic (traditional, recommended default), general (versatile layouts), classic-dark (dark theme), modern (business style), professional (corporate style)"
                  },
                  "export_as": {
                    "type": "string",
                    "default": "pptx",
                    "enum": ["pptx", "pdf"],
                    "description": "Export format (default: pptx)"
                  },
                  "tone": {
                    "type": "string",
                    "description": "Optional: presentation tone (professional, casual, academic, etc.)"
                  },
                  "instructions": {
                    "type": "string",
                    "description": "Optional: additional specific requirements or instructions"
                  }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Presentation generation completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "presentation_id": {
                      "type": "string",
                      "description": "Unique presentation identifier"
                    },
                    "title": {
                      "type": "string",
                      "description": "Generated presentation title"
                    },
                    "outline": {
                      "type": "string",
                      "description": "Brief outline of the presentation content"
                    },
                    "edit_url": {
                      "type": "string",
                      "description": "Complete URL for online presentation editing and viewing"
                    },
                    "path": {
                      "type": "string",
                      "description": "Direct access URL to the presentation"
                    },
                    "message": {
                      "type": "string",
                      "description": "Detailed status message with next steps for the user"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}